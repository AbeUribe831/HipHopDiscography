<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme.AppCompat.EditText" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
    </style>

    <style name="Theme.AppCompat.EditTextRed" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@color/red</item>
        <item name="colorControlActivated">@color/red</item>
        <item name="colorControlHighlight">@color/red</item>
    </style>
</resources>
